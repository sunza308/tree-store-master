<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3BD9D"
        tools:context=".BasketDetailActivity">

    <android.support.constraint.ConstraintLayout
            android:background="#eeeeee"
            android:layout_width="0dp"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/constraintLayout3">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_mountains"
                android:id="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="VectorDrawableCompat"/>
    </android.support.constraint.ConstraintLayout>
    <TextView
            android:text="ต้นไม้ 1"
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtGoodsName"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/txtGoodsPrice"
            android:layout_marginRight="8dp"/>
    <TextView
            android:text="รายละเอียดสินค้า"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtGoodsDetail"
            app:layout_constraintStart_toStartOf="@+id/txtGoodsName"
            app:layout_constraintTop_toBottomOf="@+id/txtGoodsName"/>
    <TextView
            android:text="250฿"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtGoodsPrice"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/txtGoodsName"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txtGoodsDetail"/>


    <android.support.constraint.ConstraintLayout
            android:background="#EEEEEE"
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:id="@+id/constraintLayout2"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtGoodsDetail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp">

    </android.support.constraint.ConstraintLayout>

    <Button
            android:text="-"
            android:elevation="3dp"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:layout_width="50dp"
            android:background="@drawable/round_button"
            android:layout_height="50dp"
            android:id="@+id/btnDelete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtAmount"
            app:layout_constraintBottom_toBottomOf="@+id/txtAmount"
            app:layout_constraintEnd_toStartOf="@+id/txtAmount"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>

    <Button
            android:text="+"
            android:elevation="3dp"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:layout_width="50dp"
            android:background="@drawable/round_button"
            android:layout_height="50dp"
            android:id="@+id/btnAdd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtAmount"
            app:layout_constraintBottom_toBottomOf="@+id/txtAmount"
            app:layout_constraintStart_toEndOf="@+id/txtAmount"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>

    <TextView
            android:text="2 ชิ้น"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAmount"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="32dp"/>
    <TextView
            android:text="450 บาท"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPrice"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btnDelete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <Button
            android:text="สั่งซื้อ"
            android:textColor="#ffffff"
            android:background="@drawable/btn_gradient_confirm_order"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnBuy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintStart_toEndOf="@+id/txtPrice"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="ยกเลิก"
            android:textColor="#ffffff"
            android:background="@drawable/btn_gradient_cancel_circle"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnCancel"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/txtPrice"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="(สี่ร้อยห้าสิบบาทถ้วน)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPriceFull"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPrice"/>

</android.support.constraint.ConstraintLayout>